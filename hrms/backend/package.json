{
"name": "hrms-backend",
"version": "1.0.0",
"description": "HRMS Backend API with Indian Payroll Compliance",
"main": "src/server.js",
"scripts": {
"start": "node src/server.js",
"dev": "nodemon src/server.js",
"test": "jest --coverage",
"test:watch": "jest --watch",
"lint": "eslint src//*.js",
"lint:fix": "eslint src//.js --fix",
"format": "prettier --write src/**/.js",
"migrate": "node src/database/migrations/runMigrations.js",
"migrate:undo": "node src/database/migrations/undoMigrations.js",
"seed": "node src/database/seeders/runSeeders.js",
"seed:undo": "node src/database/seeders/undoSeeders.js",
"db:reset": "npm run migrate:undo && npm run migrate && npm run seed",
"generate:migration": "node scripts/generateMigration.js",
"generate:model": "node scripts/generateModel.js",
"generate:controller": "node scripts/generateController.js"
},
"keywords": [
"hrms",
"payroll",
"attendance",
"leave-management",
"nodejs",
"express"
],
"author": "HRMS Development Team",
"license": "Proprietary",
"dependencies": {
"express": "^4.18.2",
"sequelize": "^6.32.1",
"pg": "^8.11.3",
"pg-hstore": "^2.3.4",
"bcryptjs": "^2.4.3",
"jsonwebtoken": "^9.0.2",
"dotenv": "^16.3.1",
"cors": "^2.8.5",
"helmet": "^7.0.0",
"express-rate-limit": "^6.10.0",
"express-validator": "^7.0.1",
"multer": "^1.4.5-lts.1",
"aws-sdk": "^2.1435.0",
"node-cron": "^3.0.2",
"winston": "^3.10.0",
"moment": "^2.29.4",
"pdfkit": "^0.14.0",
"exceljs": "^4.4.0",
"nodemailer": "^6.9.5",
"socket.io": "^4.7.2",
"redis": "^4.6.10",
"ioredis": "^5.3.2",
"uuid": "^9.0.1",
"joi": "^17.9.2",
"compression": "^1.7.4",
"morgan": "^1.10.0",
"swagger-ui-express": "^5.0.0",
"swagger-jsdoc": "^6.2.8",
"minio": "^7.1.3",
"csv-parser": "^3.0.0",
"xlsx": "^0.18.5"
},
"devDependencies": {
"nodemon": "^3.0.1",
"jest": "^29.6.2",
"supertest": "^6.3.3",
"eslint": "^8.48.0",
"eslint-config-airbnb-base": "^15.0.0",
"eslint-plugin-import": "^2.28.1",
"prettier": "^3.0.2",
"sequelize-cli": "^6.6.1"
},
"engines": {
"node": ">=18.0.0",
"npm": ">=9.0.0"
}
}